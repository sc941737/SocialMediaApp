<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="item" type="com.sc941737.socialmediaapp.repository.models.Comment" />
        <variable name="listener" type="com.sc941737.socialmediaapp.modules.comments.CommentsAdapter.CommentItemListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin">

        <TextView
            android:id="@+id/commentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="@dimen/author_font_size"
            android:onClick="@{() -> listener.onClickAuthor(item)}"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/placeholder_author"/>

        <TextView
            android:id="@+id/commentBody"
            android:layout_width="@dimen/match_constraints"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/comment_bubble"
            android:padding="@dimen/default_margin"
            android:text="@{item.body}"
            android:textColor="@color/black"
            android:textSize="@dimen/body_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/commentAuthor"
            app:layout_constraintTop_toBottomOf="@+id/commentAuthor"
            tools:text="@string/placeholder_body" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>